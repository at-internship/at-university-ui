<div class="col-md-4 my-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Course</h3>
    </div>
    <div class="card-body">
      <form class="form-horizontal" action="/course" method="POST">
        <div class="form-group">
            <label for="category">Select a category:</label>
            <select class="form-control" id="category">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" autofocus/>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label><input type="checkbox-inline" name="status" value="1" placeholder="Status">Active</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox-inline" name="status" value="0" placeholder="Status">Inactive</label>
            </div>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>