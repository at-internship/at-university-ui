<div class="tab-content card" id="nav-tabContent">
    <div class="tab-pane fade show active" id="search-md" role="tabpanel" aria-labelledby="search-tab-md">
        <!-- Course Search -->
        <section class="card">
            <div class="card-body">
                <table style="width: 100%">
                    <tr>
                        <td style="text-align: left;">
                            <h4 class="title_section">Courses Administration</h4>
                        </td>
                        <td style="text-align: right;">
                            <a class="btn btn-primary" href="/admin/course/add">&raquo; Add New Course</a>
                        </td>
                    </tr>
                </table>
            </div>
        </section>

        <section class="card">
            <div class="card-body">
                <table id="coursesTable" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each courses}}
                            <tr>
                                <td>{{_id}}</th>
                                <td>{{category}}</th>
                                <td>{{title}}</td>
                                <td>{{description}}</td>
                                <td>{{status}}</td>
                                <td>
                                    <a href="/admin/course/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                                    <a href="/admin/course/delete/{{_id}}"><i class="fas fa-trash" style="color:red"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#coursesTable').DataTable();
                    });
                </script>
            </div>
        </section>

        <!-- Course Search -->

    </div>
</div>